{
  "env": {
    "CLAUDE_CODE_FILE_READ_MAX_OUTPUT_TOKENS": "100000"
  },
  "permissions": {
    "allow": [
      "Bash(for f in main.*)",
      "Bash(do mv \"$f\" \"main_DM.$f#main.\")",
      "Bash(done)",
      "Skill(nano-banana-pro)",
      "Skill(nano-banana-pro:*)",
      "Bash(uv run:*)",
      "Bash(mkdir:*)",
      "Bash(ls:*)",
      "Bash(git mv:*)",
      "Bash(git pull:*)",
      "Bash(python:*)",
      "Bash(pip install:*)",
      "Bash(wc:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "uv run --script .claude/statusline.py",
    "padding": 0
  },
  "spinnerTipsEnabled": true,
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true
  }
}
